<%= semantic_form_for @post do |f| %>
	<%= f.inputs do %>
		<%= f.input :title %>
		<%= f.input :content, as: :text, label: "Body", input_html: {class: "autogrow", rows: 10} %>
	<% end -%>
	<%= f.actions do %>	
		<%= f.action :submit,as: :input, button_html: {class: "btn btn-primary btn-lg", disable_with: "...wait..."} %>
	<% end -%>
<% end %>